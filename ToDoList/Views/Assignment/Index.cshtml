@model IEnumerable<Assignment>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <!--'p-' moves dialognaly left-->
    <div class="row pt-4">
        <!--'pt'add a top padding-->
        <div class="col-6">
            <!--12 possible collmuns per row, so if we want 2 columms, its p-6 -->
            <h2 class="text-primary">Today's tasks</h2>
        </div>
        <div class="col-6 end text-end">
            <a asp-controller="Assignment" asp-action="CreateAssignment" class="btn btn-primary">
                <!--"btn btn-primary" bootstrap classes-->
                <i class="bi bi-plus-circle"></i> &nbsp; Create new task <!--&nbsp = space -->
            </a>
        </div>

    </div>
    <br />

</div>
<table class="table table-bordered table-striped" style="width:100%">
   <thead>
       <tr>
           <th>
               Today's tasks
           </th>
           
       </tr>
   </thead>
   <tbody>
        @foreach(var obj in Model)
        {
            @if (string.Compare(obj.HistoryId, DateTime.Now.ToString("d.M.yyyy")) == 0)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                      
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Assigment" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Assignment" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger mx-2"><i class="bi bi-trash3"></i>Delete</a>
                    </div>
                </td>
            </tr>
            }
        }
    </tbody>
</table>

