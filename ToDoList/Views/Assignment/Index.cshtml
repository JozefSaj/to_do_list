@model IEnumerable<Assignment>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <!--'p-' moves dialognaly left-->
    <div class="row pt-4">
        <!--'pt'add a top padding-->
        <div class="col-6">
            <!--12 possible collmuns per row, so if we want 2 columms, its p-6 -->
            <h2 class="text-primary">Today's tasks</h2>
        </div>
        <div class="col-6 end text-end">
            <a asp-controller="Assignment" asp-action="CreateAssignment" class="btn btn-primary">
                <!--"btn btn-primary" bootstrap classes-->
                <i class="bi bi-plus-circle"></i> &nbsp; Create new task <!--&nbsp = space -->
            </a>
        </div>

    </div>
    <br />


<table class="table table-bordered table-striped" style="width:100%">
   <thead>
       <tr>
           <th>
               Today's tasks
           </th>
           
       </tr>
   </thead>
   <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
            </tr>
        }
    </tbody>
</table>

