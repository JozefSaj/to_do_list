@model IEnumerable<Assignment>
@{
    ViewData["Title"] = "Index";
}

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
            @if (Model.Count() != 0)
            {
                @Model.First().HistoryId
            }
            else
            {
                <th>
                This day there were no tasks
                </th>
            }
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            @if (string.Compare(obj.HistoryId, DateTime.Now.ToString("d.M.yyyy")) == 0)
            {
                <tr>
                    <td width="50%">
                        @obj.Name

                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="History" asp-action="ShowDetail" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"><i class="bi bi-pencil-square">&nbsp;</i>Show Details</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


